PREFIX = @prefix@

.PHONY: all install clean distclean maintainer-clean test

all:
	$(MAKE) -C src $@

install:
	$(MAKE) -C src $@

clean:
	$(MAKE) -C src $@

distclean: clean
	$(RM) Makefile src/Makefile src/config.h src/gac.cabal
	$(RM) config.log config.status

maintainer-clean: distclean
	$(RM) -r autom4te.cache

test:
	@echo "Coming soon.."
